<%# "row row-cols-3 row-cols-md-3 row-cols-lg-3 g3" %>
<%# render 'form' %>
<%= turbo_frame_tag "form_wizard", data: {turbo_action: 'advance'} do %>
	<div class="container mt-4">
		<div class="row row-cols-2">
			<div class="row-12">
				<h3 class="card-header text-start">Report Lost & Found</h3>
			</div>
			<div class="col-md-8 col-lg-8">
				<!-- [:listings, :reports, @listing_report] -->
				<%= form_with model: @listing_report, url: listings_reports_path, class: 'new_report' do |form| %>
					<div class="row text-start">
						<div class="col-6">
							<%= content_tag :div, nil, { class: 'form-group'} do %>
								<%= form.label  :listing_type, { class: 'form-label mb-0'}  %>
								<%= form.select :listing_type,
                                        options_for_select(listing_type_options),
                                        {},
                                        { :class => 'form-select', auto_focus: true }
                                    %>
							<% end %>
						</div>
						<div class="col-6">
							<%= content_tag :div, nil, { class: 'form-group'} do %>
								<%= form.label :date_last_seen, { class: 'form-label mb-0'} %>
								<%= form.date_field :lost_found_date, {value: Time.now.strftime("%Y-%m-%d"), class: 'form-control'} %>
								<%= feedback_for? @listing_report, :lost_found_date %>
							<% end %>
						</div>
						<div class="col-12">
							<%= content_tag :div, nil, { class: 'form-group'} do %>
								<%= form.label :Nearest_Address_Last_Seen, { class: 'form-group mb-0'} %>
								<%= form.text_field :address, { class: 'form-control'} %>
								<%= feedback_for? @listing_report, :address %>
							<% end %>
						</div>
						<div class="col-12">
							<%= content_tag :div, nil, { class: 'form-group'} do %>
								<%= form.label 'Nearest cross streets, landmark or location', { class: 'form-group mb-0'} %>
								<%= form.text_field :crossroads, { class: 'form-control'} %>
								<%= feedback_for? @listing_report, :crossroads %>
							<% end %>
						</div>
						<div class="col-12">
							<%= content_tag :div, nil, { class: 'form-group'} do %>
								<%= form.label :pet_description, { class: 'form-group mb-0'} %>
								<%= form.text_area :pet_description, { class: 'form-control'} %>
								<%= feedback_for? @listing_report, :pet_description %>
							<% end %>
						</div>
						<div class="col-12">
							<%= content_tag :div, nil, { class: 'form-group'} do %>
								<%= form.label :comment, { class: 'form-group mb-0'} %>
								<%= form.text_area :comment, { class: 'form-control'} %>
								<%= feedback_for? @listing_report, :comment %>
							<% end %>
						</div>
						<%= content_tag :div, nil, { class: "form-control text-center border-0 mt-3" } do %>
							<%= form.submit "Continue", class: "boxed-btn3 border-0" %>
						<% end %>
					</div>
				<% end %>
			</div>
			<%= render 'form_contact' %>
		</div>
	<% end %>
	<p class="text-decoration-none></p>
