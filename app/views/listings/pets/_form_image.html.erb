<div class="d-flex justify-content-start mx-auto">
	<%= image_tag  "banner/golden_retriever.jpeg", { class: "img-fluid rounded-3", style:" object-fit: contain", alt: "pet-image", data: { image_target: "output" } } %>
</div>
<div class="d-flex justify-content-end mx-auto">
	<button data-action="image#triggerUpload" class=" bg-transparent border-0 px-2 text-orange fs-6 fw-bold"><i class="fa-solid fa-cloud-arrow-up text-orange fs-6 mx-2"></i>Select File</button>
	<%= form.file_field :image, { class: 'd-none', multiple: false, direct_upload: false, data: { image_target: 'input', action: "image#handleChange"} } %>
</div>
