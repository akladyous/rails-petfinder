<%= turbo_frame_tag "form_wizard", data: {turbo_action: 'advance'} do %>
	<%= form_with model: @petinfo, url: listings_pets_path, class: 'needs-validation' do |form| %>
		<div class="row mx-4">
			<div class="row-12 w-100 my-3">
				<h3 class="card-header text-start">Report Lost & Found</h3>
			</div>
			<div class="col-md-8 col-lg-8 col-sm-12">
				<%= render 'form', form: form %>
			</div>
			<div class="col-md-4 col-lg-4 col-sm-12 d-flex flex-column justify-content-between" data-controller="image" data-image-target="imageContainer">
				<div class="d-flex justify-content-start mx-auto">
					<%= image_tag  "banner/golden_retriever.jpeg", { class: "img-fluid rounded-3", style:" object-fit: contain", alt: "pet-image", data: { image_target: "output" } } %>
				</div>
				<div class="d-flex justify-content-end mx-auto">
					<button data-action="image#triggerUpload" class=" bg-transparent border-0 px-2 text-orange fs-6 fw-bold"><i class="fa-solid fa-cloud-arrow-up text-orange fs-6 mx-2"></i>Select File</button>
					<%= form.file_field :image, { class: 'd-none', multiple: false, direct_upload: false, data: { image_target: 'input', action: "image#handleChange"} } %>
				</div>
			</div>
			<div class="col-8">
				<%= content_tag :div, nil, { class: "form-control text-center border-0 mt-3" } do %>
					<% form.submit "submit", class: "boxed-btn3 border-0 px-5" %>
				<% end %>
			</div>
			<div class="col-4 text-center">
				<%# ----- %>
			</div>
		</div>
		<%= link_to "back", new_listings_report_path, { data: { turbo_frame: :_top}, rel: 'prev', class: "btn btn-light rounded-pill py-2 px-4 text-warning" } %>
	</div>
<% end %>
<% end %>
